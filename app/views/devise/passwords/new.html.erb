<div class="row">
  <div class="col-md-6 col-sm-offset-3">
    <div class="panel panel-default">
      <div class="panel-heading">
        <strong><%= I18n.t("common.forgot") %></strong>
      </div>
      <div class="panel-body">
        <%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
          <%= devise_error_messages! %>

          <div class="form-group">
            <%= f.email_field :email, autofocus: true, placeholder: I18n.t("common.email"), class: "form-control" %>
          </div>
          <div class="form-group">
            <%= f.hint "此功能将会发送一个找回密码的特别链接到你的邮箱，通过改链接可以进入重置密码的页面。", class: "help-block" %>
          </div>

          <div class="form-group">
            <%= f.submit I18n.t("common.forgot"), class: "btn btn-primary btn-block", 'data-disable-with' => t("common.submitting") %>
          </div>
        <% end %>

        <%= render "devise/shared/links", class: "btn btn-primary", 'data-disable-with' => t("common.submitting") %>
      </div>
    </div>
  </div>
</div>
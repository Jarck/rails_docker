<div class="row">
  <div class="col-md-5 col-md-offset-2">
    <div class="panel panel-default">
      <div class="panel-heading">
        <strong><%= t("common.register") %></strong>
      </div>
      <div class="panel-body">
        <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
          <%= devise_error_messages! %>

          <div class="form-group">
            <%= f.email_field :email, autofocus: true, placeholder: I18n.t("common.email"), class: "form-control" %>
          </div>

          <div class="form-group">
            <%= f.email_field :name, autofocus: true, placeholder: I18n.t("common.name"), class: "form-control" %>
          </div>

          <div class="form-group">
            <%# if @minimum_password_length %>
            <!-- <em>(<%#= @minimum_password_length %> characters minimum)</em> -->
            <%# end %><br />
            <%= f.password_field :password, autocomplete: "off", placeholder: I18n.t("activerecord.attributes.user.password"), class: "form-control" %>
          </div>

          <div class="form-group">
            <%#= f.label :password_confirmation %><br />
            <%= f.password_field :password_confirmation, autocomplete: "off", placeholder: I18n.t("activerecord.attributes.user.password_confirmation"), class: "form-control" %>
          </div>

          <div class="form-group">
            <%= f.submit t("common.register"), class: "btn btn-primary btn-block", 'data-disable-with' => I18n.t("common.logining") %>
          </div>
        <% end %>

        <%= render "devise/shared/links", class: "btn btn-primary", 'data-disable-with' => t("common.submitting") %>
      </div>
      </div>
    </div>
  </div>
</div>

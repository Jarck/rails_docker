
<div class="row">
  <div class="col-md-5 col-md-offset-2">
    <div class="panel panel-default">
      <div class="panel-heading"><%= t("common.login") %></div>
      <div class="panel-body">
          <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
            <div class="form-group">
              <%= f.text_field :login, type: :email, autofocus: true, placeholder: I18n.t("common.name") + '／' + I18n.t("common.email"), class: "form-control" %>
            </div>

            <div class="form-group">
              <%= f.text_field :password, type: :password, autocomplete: "off", placeholder: I18n.t("common.password"), class: "form-control" %>
            </div>

            <% if devise_mapping.rememberable? -%>
              <div class="form-group checkbox">
                <label class="user_remember_me">
                  <%= f.check_box :remember_me %> <%= I18n.t("common.remember_me") %>
                </label>
              </div>
            <% end -%>

            <div class="form-group">
              <%= f.submit I18n.t("common.login"), class: "btn btn-primary btn-block", 'data-disable-with' => I18n.t("common.submitting") %>
            </div>
          <% end %>

          <div class="panel-footer">
            <%= render partial: "devise/shared/links" %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
